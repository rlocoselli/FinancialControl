@model FinancialControl.Models.Schedule

@{
    ViewBag.Title = @FinancialControl.App_GlobalResources.st.Delete;
}

<h2>@FinancialControl.App_GlobalResources.st.Delete</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@FinancialControl.App_GlobalResources.st.Schedule</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("ScheduleEditForm")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal" value="Delete" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@FinancialControl.App_GlobalResources.st.BackToList, "ScheduleIndex")
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Warning !!</h4>
            </div>
            <div class="modal-body">
                @FinancialControl.App_GlobalResources.st.DeleteSchedule
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("ScheduleDelete", "Schedule", new { id=Model.id}))
                {
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">@FinancialControl.App_GlobalResources.st.Delete</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("form :input").attr("disabled", "disabled");
    $("form :input[type='button']").removeAttr("disabled");
    $("form :input[type='submit']").removeAttr("disabled");
</script>