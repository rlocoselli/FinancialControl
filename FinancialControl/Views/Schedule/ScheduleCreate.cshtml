@model FinancialControl.Models.Schedule

@{
    ViewBag.Title = @FinancialControl.App_GlobalResources.st.Create;
}

<h2>@FinancialControl.App_GlobalResources.st.Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Schedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="alert alert-success">
            <strong>@FinancialControl.App_GlobalResources.st.MessageSchedule</strong>
        </div>

        @Html.Partial("ScheduleEditForm")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@FinancialControl.App_GlobalResources.st.BackToList, "ScheduleIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/schedule")
}



